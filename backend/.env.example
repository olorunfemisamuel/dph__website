# Server Configuration
NODE_ENV=development
PORT=8000
HOST=localhost

# Database
MONGODB_URI=mongodb://localhost:27017/dph_advisory
MONGODB_TEST_URI=mongodb://localhost:27017/dph_advisory_test

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=DPH Advisory <noreply@dphadvisory.com>
ADMIN_EMAIL=admin@dphadvisory.com

# WebSocket
WS_PORT=8000
WS_PATH=/ws/stocks

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# API Keys
ALPHA_VANTAGE_API_KEY=your-api-key-here

# Frontend
FRONTEND_URL=http://localhost:5173